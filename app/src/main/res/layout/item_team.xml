<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/team_width"
    android:layout_height="@dimen/team_width"
    android:background="@drawable/background_card_rounded_white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageTeam"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/padding_8"
        android:src="@drawable/ic_football_club"
        android:tint="@color/primary_light"
        app:layout_constraintBottom_toTopOf="@id/textTeam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTeam"
        style="@style/TextViewBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_8"
        android:layout_marginBottom="@dimen/padding_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageTeam"
        tools:text="Football Club FC"/>

</androidx.constraintlayout.widget.ConstraintLayout>